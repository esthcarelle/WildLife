{{#partial "content"}}
<body>
<div class="main">
      <nav class="nav-bar">
        <ul>
          <li><a href="/"> Home </a></li>
                  <li><a href="/add/new"> Add an animal </a></li>
                  <li><a href="/form"> Post a sighting</a></li>
                   <li><a href="/animals"> View animals</a></li>

        </ul>
      </nav>
    </div>
    <style>
          body{
         background-image: url(https://wallpapercave.com/wp/pLNajY7.jpg);
         background-repeat:no-repeat;
         background-size:cover;

          }

          .main{
            margin: 50px;
            background-color:white;
            border: 2px solid #5D4D49;

          }

          .nav-bar{
            word-spacing: 40px;
            font-size: 20px;
            font-family: arial;
          }

          .nav-bar ul li a{
            text-decoration: none;
            color: black;
          }

          .nav-bar ul li{
            display: inline-block;
            -webkit-transition: border 1s, border-radius 1s, padding 1s, background-color 1s, color 1s;
          }

          .nav-bar ul li:hover{
            border-bottom: 2px solid gray;
            border-radius: 10%;
            padding: 10px;
            background-color: #2B547E;
            color: white;
          }

          </style>





 {{#if endangeredAnimals}}

        {{#each endangeredAnimals }}
          <div class="well" style="text-align:center;width:30%;margin-left:30%">

         <p>
        {{ name}}</p>
         <a href="/endangered/{{id}}">See sightings</a>
         </div>
        {{/each}}


    {{else}}
     <p>No  endangered animals!</p>
    {{/if}}
     {{#if normalAnimals}}

            {{#each normalAnimals }}



            <p>{{ name}}</p>
            <a href="/normal/{{id}}">See sightings</a>
            {{/each}}

        {{else}}
         <p>No  endangered animals!</p>
        {{/if}}
        </body>


        {{/partial}}
        {{> layout.hbs}}